<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="@dimen/tracklist_item_height"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="8dp"
    android:paddingStart="13dp"
    android:paddingEnd="19dp">

    <ImageView
        android:id="@+id/artImg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:gravity="start|center"
        android:src="@drawable/track_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|start"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="8dp">

        <TextView
            android:id="@+id/trackName"
            style="@style/track_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"

            tools:text="Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:orientation="horizontal"
            android:padding="0dp"
            android:divider="@drawable/divider"
            android:showDividers="middle">

            <TextView
                android:id="@+id/artistName"
                style="@style/track_list_item_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxWidth="230dp"
                android:ellipsize="end"
                android:maxLines="1"

                tools:text="Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum " />

            <TextView
                android:id="@+id/trackTime"
                style="@style/track_list_item_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                tools:text="00:00:00" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:layout_gravity="center|end"
        android:gravity="center|end"
        android:src="@drawable/arrow_forward"
        app:tint="@color/gray" />

</LinearLayout>