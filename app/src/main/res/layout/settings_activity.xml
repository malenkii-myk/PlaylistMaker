<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Base.Theme.PlaylistMaker"

    style="@style/activity"
    android:id="@+id/settings">

    <LinearLayout style="@style/toolbar">
        <ImageButton style="@style/toolbar_btn_back"
            android:id="@+id/btn_back_to_main" />
        <TextView style="@style/toolbar_text"
            android:text="@string/title_settings"
            android:textColor="?attr/colorOnSecondary">
        </TextView>
    </LinearLayout>


    <LinearLayout style="@style/body"
        android:padding="16dp"
        android:paddingEnd="6dp">

        <com.google.android.material.switchmaterial.SwitchMaterial
            style="@style/settings_list_item"
            android:id="@+id/themeSwitcher"
            android:theme="@style/themeSwitcher"
            android:text="@string/settings_dark_theme" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/settings_list_item"
            android:id="@+id/btn_share"
            android:drawableEnd="@drawable/share_icon"
            android:text="@string/settings_share_app"
            android:layout_marginEnd="4dp" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/settings_list_item"
            android:id="@+id/btn_support"
            android:drawableEnd="@drawable/support_icon"
            android:text="@string/settings_support" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/settings_list_item"
            android:id="@+id/btn_license"
            android:drawableEnd="@drawable/arrow_forward"
            android:text="@string/settings_license" />


    </LinearLayout>
</LinearLayout>