<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SEARCH -->
    <style name="search_input">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textColorHint">@color/light_black</item>
        <item name="android:drawableTint">@color/light_black</item>
    </style>

    <style name="search_error_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="search_error_btn_action">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="activity_player">
        <item name="android:background">@color/black</item>
    </style>

    <style name="player_track_name">
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_22</item>
    </style>

    <style name="player_track_artist">
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="player_btn_back">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="btn_track_control">
        <item name="android:tint">@color/white</item>
        <item name="android:background">@drawable/round_button</item>
    </style>

    <style name="btn_track_play">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="player_track_play_time_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="player_track_info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_13</item>
    </style>

    <style name="player_track_info_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/font_13</item>
    </style>

</resources>